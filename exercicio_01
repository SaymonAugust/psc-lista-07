// Arquivo: Exercicio1_Temperaturas.cs
using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
    static void Main()
    {
        Console.WriteLine("=== Temperaturas Médias do Ano ===");

        // 1️⃣ Lista com os nomes dos meses
        string[] meses = {
            "Janeiro", "Fevereiro", "Março", "Abril",
            "Maio", "Junho", "Julho", "Agosto",
            "Setembro", "Outubro", "Novembro", "Dezembro"
        };

        // 2️⃣ Lista para armazenar as temperaturas
        List<double> temperaturas = new List<double>();

        // 3️⃣ Ler a temperatura de cada mês
        for (int i = 0; i < 12; i++)
        {
            Console.Write($"Informe a temperatura média de {meses[i]}: ");
            double temp = double.Parse(Console.ReadLine());
            temperaturas.Add(temp);
        }

        // 4️⃣ Calcular média anual
        double mediaAnual = temperaturas.Average();
        Console.WriteLine($"\nMédia anual das temperaturas: {mediaAnual:F2}°C");

        // 5️⃣ Mostrar meses acima da média
        Console.WriteLine("\nMeses com temperatura acima da média:");
        bool encontrou = false;

        for (int i = 0; i < 12; i++)
        {
            if (temperaturas[i] > mediaAnual)
            {
                Console.WriteLine($"{i + 1} - {meses[i]}: {temperaturas[i]:F2}°C");
                encontrou = true;
            }
        }

        if (!encontrou)
            Console.WriteLine("Nenhum mês teve temperatura acima da média.");

        Console.WriteLine("\n=== Fim do programa ===");
    }
}
